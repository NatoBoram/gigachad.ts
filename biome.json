{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"css": { "formatter": { "enabled": true } },
	"formatter": {
		"formatWithErrors": true,
		"includes": [
			"**",
			"!**/.pnpm-store/",
			"!**/coverage/",
			"!**/dist/",
			"!**/docs/",
			"!**/node_modules/",
			"!**/package-lock.json",
			"!**/pnpm-lock.yaml"
		],
		"useEditorconfig": true
	},
	"html": {
		"formatter": { "enabled": true, "selfCloseVoidElements": "always" }
	},
	"javascript": {
		"formatter": { "arrowParentheses": "asNeeded", "semicolons": "asNeeded" }
	},
	"linter": { "enabled": false },
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"useIgnoreFile": true
	}
}
